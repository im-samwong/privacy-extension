{
    "manifest_version": 3,
    "name": "Privacy Policy Analyzer",
    "version": "1.0",
    "description": "Analyzes and flags privacy policies for user awareness.",
    "permissions": ["activeTab", "scripting", "storage", "notifications"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  